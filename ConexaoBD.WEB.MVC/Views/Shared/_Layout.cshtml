<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConexaoBD.WEB.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>--> <!--Adicionado-->

    <style>
        #userLogado{
            font-weight:700;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid"> <!-- O -fluid foi acrescentado -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ConexaoBD.WEB.MVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!--https://www.tutorialrepublic.com/twitter-bootstrap-tutorial/bootstrap-dropdowns.php-->
                        <li class="nav-item">
                            <div class="dropdown">
                                <a href="#" class="nav-link text-dark dropdown-toggle" id="menuGestao" data-toggle="dropdown" aria-expanded="false">Gestão</a>
                                <ul class="dropdown-menu" aria-labelledby="menuGestao">
                                    <li>
                                        <a class="nav-link text-dark" hidden id="gruposDeUtilizadores" asp-area="" asp-controller="GrupoUtilizadores" asp-action="Index">Grupos de Utilizadores</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" hidden id="utilizadores" asp-area="" asp-controller="Utilizador" asp-action="Index">Utilizadores</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" hidden id="clientes" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="login" asp-area="" asp-controller="Utilizador" asp-action="EfetuarLogin">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="userLogado" asp-area="" asp-controller="" asp-action="">@ViewBag.ClienteLogado</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" id="logout" asp-area="" asp-controller="Utilizador" asp-action="EfetuarLogout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ConexaoBD.WEB.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>--> <!--Adicionado-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
