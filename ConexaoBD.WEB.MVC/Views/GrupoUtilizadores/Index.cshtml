@model IEnumerable<ConexaoBD.DAL.Model.GrupoDeUtilizadores>

@{
    ViewData["Title"] = "Index";
}

<!--Ligação ao estilo CSS-->
<link rel="stylesheet" href="~/css/site.css" />

<style>
    th {
        cursor: pointer;
    }    
</style>

<!--Ligação ao ficheiro JavaScript geral.js-->
<script src="~/js/site.js"></script>

<h1>Grupos de Utilizadores</h1>

<p>
    <a asp-action="Create">Adicionar Novo</a>
</p>

<table style="margin-bottom: 10px;">
    <tr>
        <td><input type="text" id="procuraNomeGrupoUtilizador" onkeyup="find('procuraNomeGrupoUtilizador', 0)" placeholder="Nome.." style="width:180px;"></td>
        <td><input type="text" id="procuraTipoDeGrupoUtilizador" onkeyup="find('procuraTipoDeGrupoUtilizador', 1)" placeholder="Tipo.." style="width:180px;"></td>
    </tr>
</table>




<table class="table table-hover" id="tabela">
    <thead>
        <tr>
            <th scope="col" onclick="sortTable(0)">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col" onclick="sortTable(1)">
                @Html.DisplayNameFor(model => model.TipoDeGrupoDeUtilizadores)
            </th>
            <th scope="col" onclick="sortTable(2)">
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeGrupoDeUtilizadores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> | <br />
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
