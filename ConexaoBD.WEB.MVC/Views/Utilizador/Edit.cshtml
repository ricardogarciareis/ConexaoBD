@model ConexaoBD.DAL.Model.Utilizador

@{
    ViewData["Title"] = "Edit";
}

<!--Ligação à biblioteca jQuery-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!--Ligação ao ficheiro JavaScript geral.js-->
<script src="~/js/site.js"></script>

<h1>Editar</h1>

<h4>Utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GrupoDeUtilizadores.Nome" class="control-label"></label> <br />
                @Html.DropDownListFor(m => m.GrupoDeUtilizadores.Nome, new SelectList(ViewBag.ListaNomesGruposDeUtilizadores), new { @class = "form-control"})
                <span asp-validation-for="GrupoDeUtilizadores.Nome" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" id="submeter"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
