@model ConexaoBD.DAL.Model.Utilizador

@{
    ViewData["Title"] = "Create";
}

@*<!--Ligação à biblioteca jQuery-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!--Ligação ao ficheiro JavaScript geral.js-->
<script src="~/js/site.js"></script>*@

<h1>Novo</h1>

<h4>Utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="primeiro e último nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GrupoDeUtilizadores.Nome" class="control-label"></label> <br />
                @Html.DropDownListFor(m => m.GrupoDeUtilizadores.Nome, new SelectList(ViewBag.ListaNomesGruposDeUtilizadores), new { @class = "form-control"})
                <span asp-validation-for="GrupoDeUtilizadores.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailLogin" class="control-label"></label>
                <input asp-for="EmailLogin" class="form-control" placeholder="e-mail válido" />
                <span asp-validation-for="EmailLogin" class="text-danger"></span>
                <span class="text-danger">@ViewBag.EmailExistente</span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordLogin" class="control-label"></label>
                <input asp-for="PasswordLogin" class="form-control" placeholder="senha de pelo menos 6 caracteres"/>
                <span asp-validation-for="PasswordLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmacao" class="control-label"></label>
                <input asp-for="PasswordConfirmacao" class="form-control" placeholder="senha de pelo menos 6 caracteres"/>
                <span asp-validation-for="PasswordConfirmacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="submeter"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
